<Application x:Class="PhoneBookWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PhoneBookWPF"
             Startup="Application_Startup">

    <Application.Resources>
        <!-- Kolory motywów -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextColor" Color="#212121"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="CardColor" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="HighlightColor" Color="#E3F2FD"/>

        <!-- Style kontrolek -->
        <SolidColorBrush x:Key="ButtonBackground" Color="#2196F3"/>
        <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
        <SolidColorBrush x:Key="ListBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="ListForeground" Color="#212121"/>

        <!-- Konwertery -->
        <local:BooleanToAddEditConverter x:Key="BooleanToAddEditConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:TextTrimmerConverter x:Key="TextTrimmerConverter"/>
        <local:InitialConverter x:Key="InitialConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:ThemeToNameConverter x:Key="ThemeToNameConverter"/>
    </Application.Resources>

</Application>