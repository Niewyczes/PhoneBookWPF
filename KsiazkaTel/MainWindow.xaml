<Window x:Class="PhoneBookWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneBookWPF"
        mc:Ignorable="d"
        Title="Książka Telefoniczna" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10" Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek i wyszukiwanie -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Książka Telefoniczna" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"
                           Foreground="{DynamicResource TextColor}"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Szukaj:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="{DynamicResource TextColor}"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Width="300" 
                             Height="25"
                             Padding="5"
                             Background="{DynamicResource CardColor}"
                             Foreground="{DynamicResource TextColor}"
                             BorderBrush="{DynamicResource BorderColor}"/>
                </StackPanel>
            </StackPanel>

            <!-- Menu wyboru motywu -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                <TextBlock Text="Motyw:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource TextColor}"/>

                <ComboBox ItemsSource="{Binding Themes}"
                          SelectedItem="{Binding CurrentTheme}"
                          Width="100"
                          Background="{DynamicResource CardColor}"
                          Foreground="{DynamicResource TextColor}"
                          BorderBrush="{DynamicResource BorderColor}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource ThemeToNameConverter}}"
                                       Foreground="{DynamicResource TextColor}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Główna zawartość -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista kontaktów -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource BorderColor}" 
                    BorderThickness="1" 
                    Margin="0,0,5,0"
                    Background="{DynamicResource CardColor}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox ItemsSource="{Binding Contacts}" 
                             SelectedItem="{Binding SelectedContact}"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             BorderThickness="0,0,0,1"
                             BorderBrush="{DynamicResource BorderColor}"
                             Background="{DynamicResource ListBackground}"
                             Foreground="{DynamicResource ListForeground}">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,8" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderColor}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar/Inicjały -->
                                        <Border Grid.Column="0" 
                                                Width="40" 
                                                Height="40" 
                                                CornerRadius="20" 
                                                Background="{DynamicResource SecondaryColor}"
                                                VerticalAlignment="Center"
                                                Margin="0,0,12,0">
                                            <TextBlock Text="{Binding FirstName, Converter={StaticResource InitialConverter}}"
                                                       Foreground="White"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Informacje o kontakcie -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock FontSize="14" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextColor}">
                                                <Run Text="{Binding FirstName}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding LastName}"/>
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="📞" Margin="0,0,5,0" FontSize="11"
                                                           Foreground="{DynamicResource TextColor}"/>
                                                <TextBlock Text="{Binding PhoneNumber}" 
                                                           Foreground="{DynamicResource TextColor}"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0"
                                                        Visibility="{Binding Email, Converter={StaticResource StringToVisibilityConverter}}">
                                                <TextBlock Text="✉" Margin="0,0,5,0" FontSize="11"
                                                           Foreground="{DynamicResource TextColor}"/>
                                                <TextBlock Text="{Binding Email, Converter={StaticResource TextTrimmerConverter}, ConverterParameter=25}" 
                                                           Foreground="{DynamicResource TextColor}"
                                                           FontSize="11"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Data modyfikacji -->
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding ModifiedDate, StringFormat='{}{0:dd.MM.yy}'}"
                                                   Foreground="{DynamicResource TextColor}"
                                                   FontSize="10"
                                                   VerticalAlignment="Top"
                                                   Margin="5,3,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource CardColor}"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="5">
                        <Button Content="Dodaj" 
                                Command="{Binding AddCommand}" 
                                Width="80" 
                                Height="30" 
                                Margin="5,0"
                                Background="{DynamicResource ButtonBackground}"
                                Foreground="{DynamicResource ButtonForeground}"
                                BorderThickness="0"/>
                        <Button Content="Edytuj" 
                                Command="{Binding EditCommand}" 
                                Width="80" 
                                Height="30" 
                                Margin="5,0"
                                Background="{DynamicResource ButtonBackground}"
                                Foreground="{DynamicResource ButtonForeground}"
                                BorderThickness="0"/>
                        <Button Content="Usuń" 
                                Command="{Binding DeleteCommand}" 
                                Width="80" 
                                Height="30" 
                                Margin="5,0"
                                Background="{DynamicResource ButtonBackground}"
                                Foreground="{DynamicResource ButtonForeground}"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Separator -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource BorderColor}"/>

            <!-- Panel powitalny -->
            <Border Grid.Column="2" 
        BorderBrush="{DynamicResource BorderColor}" 
        BorderThickness="1" 
        Margin="5,0,0,0"
        Padding="20"
        Background="{DynamicResource CardColor}"
        Visibility="{Binding ShowWelcome, Converter={StaticResource BooleanToVisibilityConverter}}">

                <Grid VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                        <!-- NAGŁÓWEK (bez ikony nad nim) -->
                        <TextBlock Text="Witaj w aplikacji książki telefonicznej!" 
                       FontSize="22" 
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       Margin="0,0,0,20"
                       Foreground="{DynamicResource TextColor}"/>

                        <!-- Opis -->
                        <TextBlock Text="Twoje osobiste narzędzie do zarządzania kontaktami" 
                       FontSize="14"
                       TextAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="{DynamicResource TextColor}"/>

                        <!-- Lista funkcji -->
                        <Border BorderBrush="{DynamicResource BorderColor}" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="0,0,0,30"
                    Background="{DynamicResource BackgroundColor}">
                            <StackPanel>
                                <TextBlock Text="Funkcje aplikacji:" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"
                               Foreground="{DynamicResource PrimaryColor}"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="•" Foreground="{DynamicResource SecondaryColor}" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="Dodawanie nowych kontaktów" Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="•" Foreground="{DynamicResource SecondaryColor}" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="Edycja istniejących kontaktów" Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="•" Foreground="{DynamicResource SecondaryColor}" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="Wyszukiwanie kontaktów" Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="•" Foreground="{DynamicResource SecondaryColor}" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="Automatyczne zapisywanie danych" Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="•" Foreground="{DynamicResource SecondaryColor}" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="Import i eksport danych" Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Przyciski akcji -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Dodaj pierwszy kontakt" 
                        Command="{Binding AddCommand}"
                        Background="{DynamicResource PrimaryColor}"
                        Foreground="{DynamicResource ButtonForeground}"
                        FontWeight="SemiBold"
                        Padding="20,10"
                        BorderThickness="0"
                        Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>

                        <!-- Informacja o liczbie kontaktów -->
                        <TextBlock Text="{Binding Contacts.Count, StringFormat='Posiadasz {0} kontaktów w książce'}" 
                       FontSize="12"
                       TextAlignment="Center"
                       Margin="0,25,0,0"
                       Foreground="{DynamicResource TextColor}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel edycji/dodawania kontaktu -->
            <Border Grid.Column="2" 
                    BorderBrush="{DynamicResource BorderColor}" 
                    BorderThickness="1" 
                    Margin="5,0,0,0"
                    Padding="10"
                    Background="{DynamicResource CardColor}"
                    Visibility="{Binding ShowContactDetails, Converter={StaticResource BooleanToVisibilityConverter}}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding IsAdding, Converter={StaticResource BooleanToAddEditConverter}}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"
                               Foreground="{DynamicResource TextColor}"/>

                    <!-- Formularz edycji/dodawania -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Imię -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Imię:" 
                                           Margin="0,5,10,5" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextColor}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" 
                                         Text="{Binding EditingContact.FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5,0,5" 
                                         Height="25"
                                         Background="{DynamicResource BackgroundColor}"
                                         Foreground="{DynamicResource TextColor}"
                                         BorderBrush="{DynamicResource BorderColor}"
                                         IsEnabled="{Binding IsNotEditing, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Nazwisko -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="Nazwisko:" 
                                           Margin="0,5,10,5" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextColor}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
                                         Text="{Binding EditingContact.LastName, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5,0,5" 
                                         Height="25"
                                         Background="{DynamicResource BackgroundColor}"
                                         Foreground="{DynamicResource TextColor}"
                                         BorderBrush="{DynamicResource BorderColor}"
                                         IsEnabled="{Binding IsNotEditing, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Numer telefonu -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Telefon:" 
                                           Margin="0,5,10,5" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextColor}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
                                         Text="{Binding EditingContact.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5,0,5" 
                                         Height="25"
                                         Background="{DynamicResource BackgroundColor}"
                                         Foreground="{DynamicResource TextColor}"
                                         BorderBrush="{DynamicResource BorderColor}"
                                         IsEnabled="{Binding IsNotEditing, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Email -->
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                           Text="Email:" 
                                           Margin="0,5,10,5" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextColor}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" 
                                         Text="{Binding EditingContact.Email, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5,0,5" 
                                         Height="25"
                                         Background="{DynamicResource BackgroundColor}"
                                         Foreground="{DynamicResource TextColor}"
                                         BorderBrush="{DynamicResource BorderColor}"
                                         IsEnabled="{Binding IsNotEditing, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Adres -->
                                <TextBlock Grid.Row="4" Grid.Column="0" 
                                           Text="Adres:" 
                                           Margin="0,5,10,5" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextColor}"/>
                                <TextBox Grid.Row="4" Grid.Column="1" 
                                         Text="{Binding EditingContact.Address, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5,0,5" 
                                         Height="25"
                                         Background="{DynamicResource BackgroundColor}"
                                         Foreground="{DynamicResource TextColor}"
                                         BorderBrush="{DynamicResource BorderColor}"
                                         IsEnabled="{Binding IsNotEditing, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Notatki -->
                                <TextBlock Grid.Row="5" Grid.Column="0" 
                                           Text="Notatki:" 
                                           Margin="0,5,10,5" 
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource TextColor}"/>
                                <TextBox Grid.Row="5" Grid.Column="1" 
                                         Text="{Binding EditingContact.Notes, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5,0,5" 
                                         Height="80"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Background="{DynamicResource BackgroundColor}"
                                         Foreground="{DynamicResource TextColor}"
                                         BorderBrush="{DynamicResource BorderColor}"
                                         IsEnabled="{Binding IsNotEditing, Converter={StaticResource InverseBooleanConverter}}"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Przyciski zapisz/anuluj -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,15,0,0">
                        <Button Content="Zapisz" 
                                Command="{Binding SaveCommand}" 
                                Width="80" 
                                Height="30" 
                                Margin="5,0"
                                Background="{DynamicResource PrimaryColor}"
                                Foreground="{DynamicResource ButtonForeground}"
                                BorderThickness="0"
                                Visibility="{Binding IsNotEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <Button Content="Anuluj" 
                                Command="{Binding CancelCommand}" 
                                Width="80" 
                                Height="30" 
                                Margin="5,0"
                                Background="{DynamicResource PrimaryColor}"
                                Foreground="{DynamicResource ButtonForeground}"
                                BorderThickness="0"
                                Visibility="{Binding IsNotEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Stopka -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0"
                   Background="{DynamicResource CardColor}"
                   Foreground="{DynamicResource TextColor}">
            <StatusBarItem>
                <TextBlock Text="{Binding Contacts.Count, StringFormat='Liczba kontaktów: {0}'}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Ostatnia modyfikacja:"/>
                    <Run Text="{Binding SelectedContact.ModifiedDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedContact.PhoneNumber, StringFormat='Telefon: {0}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>